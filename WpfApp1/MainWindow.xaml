<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer x:Name="scrollBar" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" ScrollChanged="scrollBar_ScrollChanged" PreviewMouseLeftButtonUp="scrollBar_PreviewMouseLeftButtonUp">
            <StackPanel>
                <Button MinHeight="100" MinWidth="1000"  Background="Red"/>
                <Button MinHeight="100" MinWidth="1000" Background="Orange"/>
                <Button MinHeight="100" MinWidth="1000" Background="Yellow"/>
                <Button MinHeight="100" MinWidth="1000" Background="Green"/>
                <Button MinHeight="100" MinWidth="1000" Background="Blue"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
